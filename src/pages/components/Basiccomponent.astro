---
import Button from "../components/Button.astro";
---

<style>
  .video-container {
    background-color: black;
  }
  .black-box-wrapper {
    position: relative;
    width: 100%;
    height: 100vh;
    background-color: #353535;
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
  }
  .black-box {
    display: none; /* no need to duplicate background */
  }
</style>

<div class="black-box-wrapper">
  <div class="black-box"></div>
  <Button text="Knap" variant="secondary" />
</div>
