---
const { data } = Astro.props;
---

<article class="card">
  <a href=`/products/${data.slug}`>
    <div class="img_case">
      <img src={data.images} alt=`Image of ${data.product}` />
    </div>
    <div class="txt_case">
      <h4>{data.name}</h4>
      <p>{data.pris}kr</p>
    </div>
  </a>
</article>

<style>
  .card {
    flex: 0 0 220px;
    height: 300px;
    padding-bottom: 1rem;
    overflow: hidden;
    transition:
      transform 0.3s ease,
      box-shadow 0.3s ease;
    background-color: white;
    margin-right: 1rem;
  }

  .card:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
  }
  .img_case {
    width: 220px;
    height: 80%;
  }
  .img_case img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .txt_case {
    display: flex;
    margin-left: 5px;
    flex-direction: column;
    align-items: start;
    width: 80%;
    background-color: wh;
  }

  h4 {
    font-size: 15px;
    margin: 2px 0px;
    color: var(--primary);
  }

  h4 {
    font-size: 15px;
    margin: 2px 0px;
    color: var(--primary);
  }

  p {
    font-size: 13px;
  }

  a {
    text-decoration: none;
  }
</style>
